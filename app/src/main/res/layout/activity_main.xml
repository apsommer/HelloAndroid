<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sommerengineering.helloandroid.MainActivity"

    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView

        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@android:color/white"

        />

    <ImageView

        android:id="@+id/udacity_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:srcCompat="@drawable/udacity_share"

        />

    <TextView

        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="96dp"
        android:layout_marginLeft="16dp"

        android:text="@string/business_name"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        />

    <TextView

        android:id="@+id/address_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="76dp"
        android:layout_marginLeft="16dp"

        android:text="@string/address_line_1"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:textSize="14sp"

        />

    <TextView

        android:id="@+id/address_line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="56dp"
        android:layout_marginLeft="16dp"

        android:text="@string/address_line_2"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:textSize="14sp"

        />

    <TextView

        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="16dp"

        android:text="@string/phone_number"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="left"
        android:textColor="@android:color/black"
        android:textSize="14sp"

        />

    <TextView

        android:id="@+id/website_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"

        android:text="@string/website_link"
        android:fontFamily="sans-serif"
        android:textColorLink="@android:color/black"
        android:gravity="left"
        android:autoLink="all"
        android:textColor="@android:color/black"
        android:textSize="14sp"

        />

</RelativeLayout>